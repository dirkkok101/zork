{
  "name": "zork-text-adventure",
  "version": "1.0.0",
  "type": "module",
  "description": "This is a 100% authentic recreation of the original Zork 1 text adventure game.",
  "scripts": {
    "build": "vite build",
    "build:tsc": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "vite",
    "dev:node": "npx tsx src/index.ts",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:item-loader": "jest --testPathPattern=\"testing/data_loaders/item_data_loader/unit_tests\"",
    "test:diagnostics:scenes": "bash tools/test-diagnostics.sh --scenes",
    "test:diagnostics:items": "bash tools/test-diagnostics.sh --items",
    "test:diagnostics:monsters": "bash tools/test-diagnostics.sh --monsters",
    "lint": "eslint src/**/*.ts testing/**/*.ts",
    "typecheck": "tsc --noEmit",
    "generate:scene": "npx tsx tools/test-generators/src/cli.ts generate-scene",
    "generate:validate": "npx tsx tools/test-generators/src/cli.ts validate"
  },
  "keywords": [
    "zork",
    "game",
    "data",
    "typescript"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-localstorage-mock": "^2.4.26",
    "sass": "^1.89.2",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.0",
    "loglevel": "^1.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
